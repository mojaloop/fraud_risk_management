{
  "name": "mojaloop-api",
  "version": "0.1.0",
  "description": "A REST API that allows Mojaloop requests to be forwarded into the FMR system",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node build/index.js",
    "start:dev": "nodemon",
    "build": "rimraf ./build && tsc",
    "lint": "eslint .",
    "fix": "yarn fix:prettier && yarn fix:eslint",
    "fix:eslint": "eslint --fix \"**/*.ts\"",
    "fix:prettier": "prettier --write \"**/*.ts\"",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint \"**/*.ts\"",
    "lint:prettier": "prettier --check \"**/*.ts\""
  },
  "contributors": [
    "Aaron Reynoza <aaron.alejandro.reynoza@gmail.com"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/mojaloop/mojaloop-api.git"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@apidevtools/swagger-express-middleware": "4.0.2",
    "body-parser": "1.19.0",
    "express": "4.17.1",
    "nocache": "^2.1.0",
    "node-fetch": "^2.6.1",
    "swagger-jsdoc": "4.2.3",
    "swagger-ui-express": "4.1.4"
  },
  "devDependencies": {
    "@types/node": "^14.14.25",
    "@types/node-fetch": "^2.5.8",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "4",
    "nodemon": "^2.0.6",
    "npm-audit-resolver": "^2.2.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix"
  }
}
