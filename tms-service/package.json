{
  "name": "tms-service",
  "version": "0.0.1",
  "description": "Node.js (TypeScript) gRPC Service for TMS FRM",
  "main": "dist/src/server.js",
  "engines": {
    "node": ">=14"
  },
  "types": "dist/index.d.ts",
  "keywords": [
    "mojaloop",
    "frm"
  ],
  "contributors": [
    {
      "name": "Joey Goksu",
      "email": "me@joeygoksu.com"
    }
  ],
  "license": "ISC",
  "scripts": {
    "prebuild": "node bin/proto",
    "build": "rimraf dist && tsc --project tsconfig.json && yarn run copy-files",
    "prestart": "npm run build",
    "start": "node dist/src/server",
    "dev": "ts-node-dev --respawn --transpile-only ./src/server.ts",
    "client": "node dist/src/client",
    "cleanup": "rm -rf dist template jest.config.js jest.config.js.map node_modules yarn.lock",
    "copy-files": "copyfiles mojaloop-api.yaml dist/src",
    "fix": "yarn fix:prettier && yarn fix:eslint",
    "fix:eslint": "eslint --fix \"**/*.ts\"",
    "fix:prettier": "prettier --write \"**/*.ts\"",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint \"**/*.ts\"",
    "lint:prettier": "prettier --check \"**/*.ts\"",
    "test": "jest --config=jest.config.ts --passWithNoTests",
    "test2": "jest --config=jest.config.ts --passWithNoTests ./__tests__/integrations/rest.test.ts",
    "test:watch": "jest --config=jest.config.ts --watch",
    "test:unit": "yarn test ./__tests__/units",
    "test:integration": "yarn test ./__tests__/integrations --detectOpenHandles"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.3.2",
    "@types/google-protobuf": "^3.15.2",
    "@types/koa": "^2.13.3",
    "@types/koa-bodyparser": "^4.3.1",
    "@types/koa-router": "^7.4.2",
    "arangojs": "^7.5.0",
    "dotenv": "^10.0.0",
    "elastic-apm-node": "^3.15.0",
    "google-protobuf": "^3.17.1",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.0.0",
    "log4js": "^6.3.0",
    "redis": "^3.1.2",
    "supertest": "^6.1.3",
    "swagger2": "^3.0.0",
    "swagger2-koa": "^3.0.0"
  },
  "devDependencies": {
    "@types/arangodb": "^3.5.12",
    "@types/dotenv": "^8.2.0",
    "@types/elastic-apm-node": "^2.7.0",
    "@types/jest": "^26.0.23",
    "@types/koa": "^2.13.3",
    "@types/koa-bodyparser": "^4.3.1",
    "@types/node": "^15.6.1",
    "@types/redis": "^2.8.29",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "@types/log4js": "^2.3.5",
    "copyfiles": "^2.4.1",
    "dtslint": "^4.1.0",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-sonarjs": "^0.7.0",
    "eslint-plugin-standard": "^5.0.0",
    "grpc-tools": "^1.11.1",
    "grpc_tools_node_protoc_ts": "^5.2.2",
    "husky": "4.3.8",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "protobufjs": "^6.11.2",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^1.1.6",
    "typedoc": "^0.20.36",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
