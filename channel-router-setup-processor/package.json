{
  "name": "channel-orchestrator-service",
  "version": "0.1.0",
  "description": "predicate-builder-service",
  "main": "src/index.ts",
  "types": "build/index.d.ts",
  "scripts": {
    "build:proto": "node bin/proto",
    "build": "tsc --project tsconfig.json && yarn run copy-files",
    "copy-files": "copyfiles mojaloop-api.yaml build",
    "dev": "ts-node-dev --respawn --transpile-only ./src/server.ts",
    "start": "node build/server",
    "cleanup": "rm -rf build template jest.config.js jest.config.js.map node_modules yarn.lock",
    "fix": "yarn fix:prettier && yarn fix:eslint",
    "fix:eslint": "eslint --fix \"**/*.ts\"",
    "fix:prettier": "prettier --write \"**/*.ts\"",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint \"**/*.ts\"",
    "lint:prettier": "prettier --check \"**/*.ts\"",
    "test": "jest --config=jest.config.ts --passWithNoTests",
    "test:watch": "jest --config=jest.config.ts --watch",
    "test:unit": "yarn test ./__tests__/units",
    "test:integration": "yarn test ./__tests__/integrations --detectOpenHandles"
  },
  "keywords": [],
  "contributors": [
    {
      "name": "Johan Foley"
    }
  ],
  "license": "ISC",
  "dependencies": {
    "@grpc/grpc-js": "^1.3.2",
    "@log4js-node/logstash-http": "^1.1.0",
    "@types/async": "^3.2.5",
    "@types/redis": "^2.8.28",
    "@types/google-protobuf": "^3.15.2",
    "@types/koa": "^2.13.3",
    "@types/koa-bodyparser": "^4.3.1",
    "@types/koa-router": "^7.4.2",
    "async": "^3.2.0",
    "copyfiles": "^2.4.1",
    "dotenv": "^8.2.0",
    "elastic-apm-node": "^3.14.0",
    "express": "^4.17.1",
    "google-protobuf": "^3.17.3",
    "grpc-tools": "^1.11.2",
    "grpc_tools_node_protoc_ts": "^5.3.0",
    "kafka-node": "^5.0.0",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.0.0",
    "log4js": "^6.3.0",
    "protobufjs": "^6.11.2",
    "redis": "^3.0.2",
    "shelljs": "^0.8.4"
  },
  "devDependencies": {
    "@types/arangodb": "^3.5.12",
    "@types/dotenv": "^8.2.0",
    "@types/elastic-apm-node": "^2.7.0",
    "@types/jest": "^26.0.23",
    "@types/koa-bodyparser": "^4.3.1",
    "@types/log4js": "^2.3.5",
    "@types/node": "^15.6.1",
    "@types/redis": "^2.8.29",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "copyfiles": "^2.4.1",
    "dtslint": "^4.1.0",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-sonarjs": "^0.7.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "redis-mock": "^0.56.3",
    "replace": "1.2.0",
    "prettier": "^2.3.1",
    "protobufjs": "^6.11.2",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^1.1.6",
    "typedoc": "^0.20.36",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
